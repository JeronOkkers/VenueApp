<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - VenueApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div class="d-flex">
        <!-- Sidebar -->
        <nav class="sidebar bg-light">
            <div class="p-3">
                <h3 class="sidebar-title">EventBook Pro</h3>
                <ul class="nav flex-column">
                    <li class="nav-item"><a class="nav-link active" href="/">Dashboard</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Venues">Venues</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Events">Events</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Bookings">Bookings</a></li>
                    <hr>
                    <li class="nav-item"><a class="nav-link" href="/Reports">Reports</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Settings">Settings</a></li>
                </ul>
            </div>
        </nav>

        <!-- Main content -->
        <div class="content p-4">
            <nav class="navbar navbar-light bg-white border-bottom mb-3">
                <div class="container-fluid">
                    <span class="navbar-brand">Venues</span>
                    <button class="btn btn-primary">Add New Venue</button>
                </div>
            </nav>

            <main role="main">
                @RenderBody()
            </main>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
