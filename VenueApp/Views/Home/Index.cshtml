@{
    ViewData["Title"] = "Dashboard";
}

<div class="container">
    <!-- Search bar -->
    <div class="mb-4">
        <input type="text" class="form-control" placeholder="Enter venue name or location">
    </div>

    <!-- Venue Cards -->
    <div class="row">
        @for (int i = 0; i < 4; i++)
        {
            <div class="col-md-3">
                <div class="card text-center p-3">
                    <div class="icon">
                        <i class="bi bi-geo-alt"></i> <!-- Bootstrap icon -->
                    </div>
                    <h5>Grand Ballroom</h5>
                    <p>Capacity: 500 • Downtown</p>
                    <div class="d-grid gap-2">
                        <button class="btn btn-primary">View Details</button>
                        <button class="btn btn-outline-secondary">Edit</button>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Upcoming Events -->
    <h4 class="mt-4">Upcoming Events</h4>
    <table class="table">
        <thead>
            <tr>
                <th>Event</th>
                <th>Venue</th>
                <th>Date</th>
                <th>Attendees</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>Corporate Gala</td>
                <td>Grand Ballroom</td>
                <td>May 15, 2023</td>
                <td>500</td>
                <td>
                    <button class="btn btn-light btn-sm"><i class="bi bi-pencil"></i></button>
                    <button class="btn btn-danger btn-sm"><i class="bi bi-trash"></i></button>
                </td>
            </tr>
        </tbody>
    </table>
</div>
